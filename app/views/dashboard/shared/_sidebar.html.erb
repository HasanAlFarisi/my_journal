<div id="side_column">
  <div class="side_column_section">
    <a href="#">
      <%= image_tag "templatemo_200_200_ads.jpg",alt:"ads", width:"250", height:"250" %>
    </div>
    <div class="side_column_section">
      <h3>Categories</h3>
      <ul class="side_menu">
      <% @categories_list.each do |category| %>
        <li><%= link_to "#{category.name}", admin_category_path(category) %></li>
      <% end %>
      </ul>
    
    </div>
    
    <div class="side_column_section">
      <h3>Recent Posts</h3>
      <% @articles.each do |article| %>
        <div class="recent_post">
            <h4><%= link_to article.title, '#' %></h4>
            <div class="ellipsis"><%=raw article.body %></div>
        </div>
      <% end %>
    </div>   
  </div> <!-- end of side column -->
  