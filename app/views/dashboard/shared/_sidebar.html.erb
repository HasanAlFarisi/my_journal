<div id="side_column">
  <div class="side_column_section">
    <a href="#">
      <%#= image_tag "templatemo_200_200_ads.jpg",alt:"ads", width:"250", height:"250" %>
      </a>
    </div>
    <div class="side_column_section">
      <h3>Categories</h3>
      <ul class="side_menu">
      <% @categories_list.each do |category| %>
        <li><%= link_to "#{category.name}", dashboard_home_show_categories_path(category) %></li>
        <ul class="sub_side_menu">
          <% category.sub_categories.each do |sub_category| %>
            <li><%= link_to sub_category.name, dashboard_home_show_sub_categories_path(sub_category) %></li>
          <% end %>
        </ul>
      <% end %>
      </ul>
    </div>
    
    <div class="side_column_section">
      <h3>Recent Posts</h3>
      <% @recent_posts.each do |article| %>
        <div class="recent_post">
            <h4><%= link_to article.title, dashboard_home_path(article) %></h4>
            <div class="ellipsisTwo article_sidebar"><%=raw article.body %></div>
        </div>
      <% end %>
    </div>   
  </div> <!-- end of side column -->
  