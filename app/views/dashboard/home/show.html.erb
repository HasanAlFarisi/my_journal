<div id="index-place">
            <div class="post-title">
                    <h2><%= link_to @article.title, dashboard_home_path(@article) %></h2>
                    <div class="post-title-info">
                          <div class="post-date">Dated: <%= "#{@article.created_at.strftime('%d %B %Y')} " %>
                          
                                Category
                                <% if @article.category_id.present? %>
                                    <b><%= link_to find_category(@article.category_id), dashboard_home_show_categories_path(@article.category_id) %></b>
                                <% else %>
                                    <b><%= link_to find_category(@article.category_id), "javascript:void(0)" %></b>
                                <% end %>

                                <% if @article.sub_category_id.present? %>
                                    <b><%= link_to find_sub_category(@article.sub_category_id), dashboard_home_show_sub_categories_path(@article.sub_category_id) %></b>
                                <% else %>
                                    <b><%= link_to find_sub_category(@article.sub_category_id), "javascript:void(0)" %></b>
                                <% end %>
                          </div>  
                          <div class="post-comments">
                                <b><%= counting_comment(@article) %></b> Comment
                                <div class="fb-share-button" data-href="https://journalkreativ.herokuapp.com/dashboard/home/<%=@article.id%>" data-layout="button_count"></div>
                          </div>
                    </div>
            </div>
                  <div class="post-entry">
                    <p>
                          <%= image_tag "http://res.cloudinary.com/sampulkreativ/image/upload#{loaded_rand("articles", @article.id)}/articles/#{@article.id}", style:"margin-left: 5px; margin-right: 5px;",alt:"",align:"left", width:"300" %>
                          <div><%=raw @article.body %></div>
                    </p>
              </div>
      <div class="clear"></div>
      <br>
      <div class="post-category">&nbsp;</div>
      <div id="comment-field">
        <p>Comment(s)</p>
        <%= render :partial => "dashboard/comments/index", locals: {dashboard_comments: @article_comments} %>
        <div id="comment-place"><!-- Comment place from render partial --></div>
        <%= render 'dashboard/shared/ajax_loader' %>
        <%= render partial: 'dashboard/comments/form', locals: {status: 'contact_for_comment'} %>
      </div>
      <div class="link_button">
        <%= link_to "Back ...", session[:url_back_dashboard] %>
      </div>
