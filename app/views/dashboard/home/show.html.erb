<div id="index-place">
  <div id="main_column">
      <div class="post_box">
        <div class="date_box">
         	<p><%= "#{@article.updated_at.strftime('%d %b %Y')}" %></p>
        </div>
            
        <div class="post_body">
            <h2><a href="#"><%= @article.title %></a></h2>
          <div class="post_info">
    			  category
                <% if @article.category_id.present? %>
                  <%= link_to find_category(@article.category_id), dashboard_home_show_categories_path(@article.category_id), remote: true %>
                <% else %>
                    <%= link_to find_category(@article.category_id), "javascript:void(0)" %>
                <% end %>

                <% if @article.sub_category_id.present? %>
                    <%= link_to find_sub_category(@article.sub_category_id), dashboard_home_show_sub_categories_path(@article.sub_category_id), remote: true %>
                <% else %>
                    <%= link_to find_sub_category(@article.sub_category_id), "javascript:void(0)" %>
                <% end %>
          </div>
                      
          <div class="post_content">
            <a href="#">
            <%= image_tag @article.photo.url(:original), width:"410px" %>
            </a>
            <%=raw @article.body %>
            
            <div id="comment-field">
              <p>Comment</p>
              <%= render :partial => "dashboard/comments/index", locals: {dashboard_comments: @article_comments} %>
              <div id="comment-place"><!-- Comment place from render partial --></div>
              <%= render partial: 'dashboard/comments/form' %>
            </div>
            <div class="link_button">
              <%= link_to "Back ...", root_path %>
            </div>
          </div> 
        </div>
      </div>
    </div>
</div>