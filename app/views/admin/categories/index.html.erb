<div class="panel panel-primary">
      <div class="panel-heading">
          <i class="fa fa-paperclip fa-fw"></i><spans class="assign">Categories</spans>
      </div>

	<div class="panel-body">
		<div class="row">
			<div class="col-lg-12">
				<div class="table-responsive">
					<table class="table table-bordered table-hover table-striped">
						<thead>
							<tr>
								<th width="13">No</th>
								<th width="500px">Category Name</th>
						            	<th width="500px">Sub Category</th>
						            	<th colspan="2"><center>Action</center></th>
							</tr>
						</thead>
						<tbody class="get_index">
							<tr class="ajaxs hide">
								<td colspan="6">
									<center><%= render 'dashboard/shared/ajax_loader' %></center>
								</td>
							</tr>
								<%= render "admin/categories/shared/index" %>
						</tbody>
					</table>

					<span class="paginations">
						<div class="left">Show: <b class="shows"><%= @admin_categories.blank? ? 0 : @admin_categories.per_page > @admin_categories.count ? @admin_categories.count : @admin_categories.per_page %></b> data From: <b class="froms"><%= @admin_categories_all.blank? ? 0 : @admin_categories_all.count %></b> data
							<span class="pull-right">
								<span class="paginate">
									<%= will_paginate @admin_categories %>&nbsp;
								</span>
								<%= link_to '<span class="fa  fa-pencil-square fa-1x"></span>New Category'.html_safe, new_admin_category_path, class:"btn btn-primary" %> 
							</span>
						</div>
					</span>

				</div>
			</div>
		</div>
	</div>
</div>