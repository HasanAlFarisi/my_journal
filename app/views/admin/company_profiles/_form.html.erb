<style type="text/css">
  .company-logo{
      width: 40% !important;
      height: 40% !important;
  }
</style>

<div id="main">
  <div class="cl">&nbsp;</div>
  <div id="content">
    <!-- Box -->
    <div class="box">
      <!-- Box Head -->
      <div class="box-head">
        <h2>Add New Company Profile</h2>
      </div>
      <!-- End Box Head -->
        <%= form_for(@admin_company_profile) do |f| %>        

        <% if @admin_company_profile.errors.any? %>
          <%= render partial: "shared/validate_error", locals: { object: @admin_company_profile}%>
        <% end %>

        <!-- Form -->
        <div class="form">
        <%= f.hidden_field :id, value: @admin_company_profile.id %>
          <p>
            <span class="req">max 100 symbols</span>
             <%= f.label :name, "Company Name" %><span>(Required Field)</span>
            <%= f.text_field :name, class:"field size1" %>
          </p> 
          <p>
            <%= f.label :photo, "Company Logo" %>
            <%= f.file_field :photo, class:"field size4 input-file", id: "fileField", :onchange => "readURL(this);" %>
            <div class="foto_prev">
              <%= image_tag @admin_company_profile.photo.url(:original),class:"img-data company-logo" %> 
            </div>
          </p>

          <p>
                <%= f.label :phone %>
                <%= f.text_field :phone, class:"field size1" %>
          </p>

          <p>
                <%= f.label :motto %>
                <%= f.text_field :motto, class:"field size1" %>
          </p>

          <p>
                <%= f.label :vission %>
                <%= f.text_area :vission, class:"field size1", cols: 10, rows: 30, :class => 'mini_ckeditor' %>
          </p>

          <p>
                <%= f.label :mission %>
                <%= f.text_area :mission, class:"field size1", cols: 10, rows: 30, :class => 'mini_ckeditor' %>
          </p>

          <p>
            <%= f.label :address, "Address" %>
            <%= f.text_area :address, class:"field size1", cols: 10, rows: 30, :class => 'mini_ckeditor' %>
          </p>  
        </div>
        <!-- End Form -->
        
        <!-- Form Buttons -->
        <div class="buttons">
          <%= link_to "Back", session[:urlBack], class:"button-back" %>
          <%= f.submit "Save", class:"button" %>
        </div>
        <!-- End Form Buttons -->
      <%end%>
    </div>
    <!-- End Box -->
  </div>
  <div class="cl">&nbsp;</div>
</div>

<!-- Sidebar -->
<div id="sidebar">
  <%= render :partial => "admin/shared/sidebar" %>
</div>
<!-- Sidebar -->

<div id="modal_background"></div>
