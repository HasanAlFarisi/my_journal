<%= form_tag new_admin_journal_issue_path, method: :get do %>
	<div class="modal-dialog">
	    <div class="modal-content">
	        <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	            <h4 class="modal-title profile-header" id="myModalLabel">
	                    <i class="fa fa-bookmark fa-fw"></i>Project
	            </h4>
	        </div>

	        <div class="modal-body">
	                 <div class="row">
	                        <div class="col-lg-12">
	                        		<%= label_tag :id_journal, "Select Project" %>
	                        		<%= select_tag :id_journal, options_for_select(@project), class:"form-control" %>
	                        		<span class="error" style="color:red"></span>
	                        </div>
	                  </div>
	         </div>

	         <div class="modal-footer">
	                <button class="btn btn-success floating create" id="submit-form-profile"><i class="fa  fa-pencil fa-1x"></i>Create</button>
	                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	          </div>
	    </div>
	</div>
<% end %>

<script>
	$(".create").click(function(){
		if($("#id_journal").val() == ""){
			$(".error").html("Project can not be blank!")
			$("#id_journal").attr("style","border:1px solid red")
			return false
		}
	})
</script>