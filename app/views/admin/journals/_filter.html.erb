<div class="panel panel-primary">
	<div class="panel-heading filter">
		<%= form_tag filter_admin_journals_path(), remote: true do %>
			<%= hidden_field_tag :filter, "present" %>
			<%= label_tag :no, "Number : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :no, "", placeholder:"000000", class:"form-control floating", style:"width:10%; margin-right:10px" %>

		       <%= label_tag :project, "Project : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :project, options_for_select(@project), class:"form-control floating", style:"width:30%; margin-right:10px" %>

		       <%= label_tag :status, "Status : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :status, options_for_select(@status), class:"form-control floating", style:"width:15%; margin-right:10px" %>

		       <%= label_tag :priority, "Priority : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :priority, options_for_select(@priority), class:"form-control", style:"width:15%;" %>
		       <span class="clearfix"></span>
		       <br>
		       <%= label_tag :progress_start, "Progress : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :progress_start, options_for_select(@progress), class:"form-control floating", style:"width:10%; margin-right:10px" %>

		       <%= label_tag :progress_end, "- ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :progress_end, options_for_select(@progress), class:"form-control floating", style:"width:10%; margin-right:10px" %>

		       <%= label_tag :assign, "Assign : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <span class="generate_assign">
			       <%= select_tag :assign, options_for_select(@admins), class:"form-control floating", style:"width:10%; margin-right:10px" %>
			</span>

		       <%= label_tag :title, "Title : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :title, "", placeholder:"Title", class:"form-control floating", style:"width:39%; margin-right:10px" %>

		       <button class="btn btn-primary ajax">Filter</button>
	       <% end %>
	</div>
</div>

<%#= javascript_include_tag 'filter' %>