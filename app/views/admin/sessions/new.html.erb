<%#= render "devise/shared/links" %>
<div class="login-card" >  
  <h1>Log in</h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(@admin), class:"login active") do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %>
    </div>
    <div>
      <label name ="password">Password: <%= link_to "Forgot your password?", new_password_path(resource_name),  class:"forgot linkform" %>
      <%= f.password_field :password %>
    </div>
    <div class="bottom">
      <div class="remember">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %><span>Keep me logged in</span>
      <%end%>
      </div>
      <br>
      <center><p class="error" style="font-size:13px"><%= flash[:error] %></p></center>
      <%= f.submit "Sign in", class:"login login-submit" %>
      <div class="login-help">
        <%= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'  %> | <%= link_to "Back to Home", root_path %>
      </div>
      <div class="clear"></div>
    </div>
  <%end%>
</div>