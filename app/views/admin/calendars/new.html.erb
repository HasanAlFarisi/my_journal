<style type="text/css">
	.not-month{
		color: rgba(207, 207, 207, 1);
	}
	table tr td.current{
		background: rgba(66, 139, 202, 0.61) !important;
		color: #fff;
	}
	.schedule{
		background: rgba(66, 139, 202, 1) !important;
		font-size: 11px;
		font-weight: normal;
		padding: 5px;
		color: #fff;
		margin-bottom: 5px;
	}
	.schedule a{
		color: #fff;
	}
	table.calendar tr td{
		height: 120px;
		width: 120px !important;
	}
</style>
<div class="panel panel-primary">
      <div class="panel-heading">
          <i class="fa fa-calendar fa-fw"></i><spans class="assign"> Schedule</spans>
      </div>

      <div class="panel-body">
		<div class="row">
			<div class="col-lg-12">
				<div class="">
					<% if @calendar.present?  && @calendar.errors.any? %>
                                        <%= render partial: "shared/validate_error", locals: { object: @calendar}%>
                                <% end %>
						<div class="col-md-12 text-center">
							<div class="well controls">
								<%= link_to new_admin_calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
									<i class="glyphicon glyphicon-backward"></i>
								<% end %>
								<%= "#{@date.strftime("%B")} #{@date.year}" %>
								<%= link_to new_admin_calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
									<i class="glyphicon glyphicon-forward"></i>
								<% end %>
							</div>
						</div>
						<div class="col-md-12">
							<table class="table table-bordered table-hover table-striped calendar">
								<%= calendar @date do |date| %>
									
									<%= find_schedule(date) %>
									<%# if @events_by_date[date] %>
										<!-- <ul> -->
											<%# @events_by_date[date].each do |event| %>
												<!-- <li><%#= link_to event.name, event %></li> -->
											<%# end %>
										<!-- </ul> -->
									<%# end %>
								<% end %>
							</table>
						</div>
					
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(".date").click(function(){
		$.ajax({
	          type: "GET",
	          url: "/admin/calendars/new",
	          data: {
	          	"date" : $(this).attr("data_date"),
	          	"date_db" : $(this).attr("data_id")
	        },
	          dataType:"script"
	      })
	})
</script>