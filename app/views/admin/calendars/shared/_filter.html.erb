<div class="panel panel-primary">
	<div class="panel-heading filter">
		<%= form_tag admin_calendars_path(), method: :get, remote: true do %>
			<%= hidden_field_tag :filter, "present" %>
			<%= hidden_field_tag :date, Date.today %>

		       <%= label_tag :title, "Title : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :title, "", placeholder:"Title", class:"form-control floating", style:"width:69%; margin-right:10px" %>

		       <%= label_tag :place, "Place : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= select_tag :place, options_for_select(@place), class:"form-control floating", style:"width:18%; margin-right:10px" %>
		       <span class="clearfix"></span>
		       <br>
		       <%= label_tag :date_filter, "Date : ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :date_filter, "", placeholder:"28/04/2015", class:"form-control floating", style:"width:10%; margin-right:10px" %>

		       <%= label_tag :time_start, "Time ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :time_start, "", placeholder:"0:00 AM/PM", class:"form-control floating", style:"width:10%; margin-right:10px" %>

		       <%= label_tag :time_end, "- ", class:"floating", style:"margin:7px 5px 0px 0px;" %>
		       <%= text_field_tag :time_end, "", placeholder:"0:00 AM/PM", class:"form-control floating", style:"width:10%; margin-right:10px", id:"timepicker2" %>

			<button class="btn btn-primary ajax">Filter</button>
	       <% end %>
	</div>
</div>
<script>
	$("#timepicker2").click(function() {
	      $("#timepicker2").datetimepicker({
	      	format: 'LT'
	      });
      });
</script>