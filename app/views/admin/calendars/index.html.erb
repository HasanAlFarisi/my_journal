<style type="text/css">
	i{
		font-size: 11px;
		color: #fff;
		padding: 3px;
	}
	.confirm{
		background-color: #f0ad4e;
		width: 17px;
		text-align: center;
	}
	.join{
		background-color: #5cb85c;
	}
	.n_join{
		background-color: #d9534f;
		width: 17px;
		text-align: center;
	}
</style>
<div class="panel panel-primary">
	<div class="panel-heading">
		<i class="fa fa-calendar fa-fw"></i><spans class="assign"> Schedules</spans>
		<div class="pull-right">
			<div class="btn-group">
				<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
					Views
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu pull-right" role="menu">
					<li><%= link_to "Table", admin_calendars_path %></li>
					<li class="divider"></li>
					<li><%= link_to "Calendar", new_admin_calendar_path %></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-lg-12">
				<div>
					<table class="table table-bordered table-hover table-striped">
						<thead>
							<tr>
								<th width="13">No</th>
								<th width="500px">Title</th>
						            	<th width="12%">Time</th>
						            	<th width="500px">Place of Meeting</th>
						            	<th width="20%">Invited</th>
						            	<th colspan="2" width="14%"><center>Action</center></th>
							</tr>
						</thead>
						<tbody class="get_index">
							<tr class="ajaxs hide">
								<td colspan="7">
									<center><%= render 'dashboard/shared/ajax_loader' %></center>
								</td>
							</tr>
								<%= render "admin/calendars/shared/index" %>
						</tbody>
					</table>

					<span class="paginations">
						<div class="left">Show: <b class="shows"><%= @calendars.blank? ? 0 : @calendars.per_page > @calendars_all.map{|x| x.id}.count ? @calendars_all.map{|x| x.id}.count : @calendars.per_page %></b> data From: <b class="froms"><%= @calendars_all.blank? ? 0 : @calendars_all.map{|x| x.id}.count %></b> data
							<span class="pull-right">
								<span class="paginate">
									<%= will_paginate @calendars %>&nbsp;
								</span>
								<%= link_to '<span class="fa  fa-pencil-square fa-1x"></span> New Schedule(s)'.html_safe, new_admin_calendar_path, class:"btn btn-primary" %> 
							</span>
						</div>
					</span>

				</div>
			</div>
		</div>
	</div>
</div>
<%= javascript_include_tag "admin/calendar" %>