<style type="text/css">
  .count{
    position: absolute;
    color: red;
    font-weight: bold;
  }
</style>

<div id="main">
      <div class="cl">&nbsp;</div>
      <div id="content">
        <!-- Box -->
             <div class="box">
                <!-- Box Head -->
                    <div class="box-head">
                      <h2><%= @group.name %></h2>
                    </div>
                    <!-- End Box Head -->
                    <div class="table">
                          <% unless @admin_galleries.present? %>
                               <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                    <tr><td><center>No Photo(s) yet</center></td></tr>
                               </table>
                          <% end %>
                    </div>
                    <div class="form">
                            <div class="table" style="margin-top:-20px">
                                        <% @admin_galleries.each do |image| %>
                                                 <table style="padding:10px" class="floating">
                                                        <tr>
                                                              <td width="15px">
                                                                     <span class="count"><%= image.gallery_comments.count %></span>
                                                                     <%= link_to image_tag("comment.png", width:"150%", style:"margin-top:3px"), admin_gallery_path(image), remote: true %>
                                                               </td>
                                                               <td>
                                                                    <%= link_to 'Destroy', admin_gallery_path(image, group_id: @group.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "ico del" %>     
                                                               </td>
                                                        </tr>
                                                        <tr>
                                                              <td colspan="2">
                                                                     <%#= link_to image_tag(image.photo.url(:original),width:"125px"), admin_gallery_path(image), remote: true %>
                                                                     <%= link_to cl_image_tag("galleries/#{image.id}",width:"125px"), admin_gallery_path(image), remote: true %>
                                                              </td>
                                                        </tr>
                                                  </table>
                                          <% end %>
                                      </div>
                                      <br>
                                      <div class="cl">&nbsp;</div>
                                      <div class="pagging">
                                            <%= link_to 'Add Photo', new_admin_gallery_path(id: @group.id), class:"tab-right-button button journal", remote: true %> 
                                            <div class="left">Photos Total: <b><%= @admin_galleries.count %></b> Photos</div>
                                            <div class="right">
                                              <%= will_paginate @admin_galleries %>
                                            </div>
                                      </div>
                                  <div class="cl">&nbsp;</div>   
                            </div>
                    </div>
             </div>
       </div>
</div>

<!-- Sidebar -->
<div id="sidebar">
      <%= render :partial => "admin/shared/sidebar" %>
</div>
<!-- Sidebar -->
<div id="modal_background"></div>
<div id="show_gallery"></div>
<div id="add_photo"></div>
<%= javascript_include_tag "admin/journal" %>