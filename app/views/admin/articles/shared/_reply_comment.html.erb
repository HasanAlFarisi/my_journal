<div class="sub_comment_box hidden_<%="#{@reply_comment.id}"%>">
	<%=  image_tag  "1.gif" %>
	<nav><%= link_to "#{@reply_comment.admin.profile.name}", "#" %> <i><%= @reply_comment.admin.email%></i></nav>
	<span>on : <%= @reply_comment.created_at.strftime("%d - %B - %Y") %> said:</span>
	<nav class="clearfix"></nav>
	<%= @reply_comment.body %>
	<nav class="clearfix"></nav>
	<%= link_to '<span class="fa fa-trash-o"></span>Destroy'.html_safe, dashboard_comment_destroy_reply_path(@reply_comment), method: :delete, remote: true, onclick:"javascript:$(this).parent().remove();",class:"pull-right" %>
	<nav class="clearfix"></nav>
</div>