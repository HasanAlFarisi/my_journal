<div id="modal-comment" class="styled">
	<h2>
	    <a href='javascript:void(0)' class='close-modal-comment close'>X</a>
	    Comment from <b><%= comment.name %></b>
	  </h2>
	<div class="formModal" id="formas2" style="padding:20px;">
		<div class="form up">
		    <p id="comment-action">
	          	<%= link_to 'Reply', "#" , class:"ico edit", id:"show_comment_reply", dataId:"#{comment.id}" %> | 
	          	<%= link_to 'Delete', dashboard_comment_path(comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, :class => "ico del", id:"modal-del" %>
	          </p>
	          <p>
	            <%= label_tag :name, "Name" %>:
	            <span><%= comment.name %></span>
	          </p> 
	          <p>
	            <%= label_tag :email, "E-mail" %>:
	            <span><%= comment.email %></span>
	          </p>
	          <p>
	            <%= label_tag :body, "Content" %>:
	            <span><%= comment.body %></span>
	          </p>
	          	<div class="reply-table">
		          <table width="100%" class="table comment table-striped">
			      	<tr>
			        <th>Reply comment</th>
			        <th width="30px">Action</th>
			      </tr>
		      		<% comment.reply_comments.each do |comment| %>
		      		<tbody class='hidden_<%="#{comment.id}"%>'>
					<tr>
					  	<td style="text-align:left"><%= comment.body %></td>
					  	<td  width="5px"><%= link_to 'Destroy', dashboard_comment_destroy_reply_path(comment), method: :delete, remote: true, :class => "ico del", onclick:"hidden_delete(#{comment.id})" %>
					  	</td>
					 </tr>
				</tbody>
				<% end %>
				<tbody class="reply-comment-place" style="text-align:left">
					<!-- index of reply -->
		          	</tbody>
		          </table>
		       </div>
	          	<br>
	          <%= form_tag dashboard_comment_create_reply_comment_path(comment_id: params[:id]), remote: true do %>
	          	<div class="reply-form"></div>
	          <% end %>
	      </div>
	</div>
</div>
<script>
$(document).ready(function() {
	$("#modal-comment").fadeIn();
	$( '.close-modal-comment' ).click(function( ev ) {  $( '#modal-comment, #modal_background' ).fadeOut();  ev.preventDefault();} );

	<% if params[:reply].present? || params[:reply] == 'true' %>
		var id = <%= comment.id.to_i %>
		$(".reply-form").html("<p id='text-reply'><input type='text' name='id' value='"+id+"' style='display:none'></input><textarea name='body_reply' colspan='5' rowspan='5' class='text-replay'></textarea><input type='submit' class='button button-replay' value='Replay'></p>");
	<% end %>

	<% if comment.reply_comments != [] %>
		$(".reply-table").show();
	<% else %>
		$(".reply-table").hide();
	<% end %>
})

function hidden_delete(id){
	var ids = id;
	$(".hidden_"+ids).remove();
}

$("#show_comment_reply").click(function(){
	var id = $("#show_comment_reply").attr("dataId")
	$(".reply-form").html("<p id='text-reply'><input type='text' name='id' value='"+id+"' style='display:none'></input><textarea name='body_reply' colspan='5' rowspan='5' class='text-replay'></textarea><input type='submit' class='button button-replay' value='Replay'></p>");
	return false;
})
</script>