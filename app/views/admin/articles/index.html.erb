<%= render "admin/articles/filter" %>
<div class="panel panel-primary">
      <div class="panel-heading">
          <i class="fa fa-files-o fa-fw"></i><spans class="assign">Article(s)</spans>
      </div>

	<div class="panel-body">
		<div class="row">
			<div class="col-lg-12">
				<div class="table-responsive">
					<table class="table table-bordered table-hover table-striped">
						<thead>
							<tr>
								<th width="13">No</th>
								<th width="300px">Title</th>
						            	<th width="500px">Content</th>
						            	<th width="200px"><center>Category</center></th>
						            	<th width="10px">Comment</th>
						            	<th colspan="2"><center>Action</center></th>
							</tr>
						</thead>
						<tbody class="get_index">
							<tr class="ajaxs hide">
								<td colspan="6">
									<center><%= render 'dashboard/shared/ajax_loader' %></center>
								</td>
							</tr>
								<%= render partial: "admin/articles/index", locals:{articles: @articles} %>
						</tbody>
					</table>

					<span class="paginations">
						<div class="left">Show: <b class="shows"><%= @articles.blank? ? 0 : @articles.per_page > @articles.count ? @articles.count : @articles.per_page %></b> data From: <b class="froms"><%= @articles_all.blank? ? 0 : @articles_all.count %></b> data
							<span class="pull-right">
								<span class="paginate">
									<%= will_paginate @articles %>&nbsp;
								</span>
								<%= link_to '<span class="fa  fa-pencil-square fa-1x"></span>New Article'.html_safe, new_admin_article_path, class:"btn btn-primary" %> 
							</span>
						</div>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>