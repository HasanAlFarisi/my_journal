<!-- Main -->
<div id="main">
  <div class="cl">&nbsp;</div>
  
  <!-- Content -->
  <div id="content">
    
    <!-- Box Article -->
    <div class="box">
      <!-- Box Head -->
      <div class="box-head">
        <h2 class="left">Current Galleries</h2>

        <%#= render partial:'admin/shared/search', locals:{status: nil} %>

      </div>                               
      <!-- End Box Head --> 

      <!-- Table -->
      <div class="table">
        
          <% unless @admin_gallery_groups.present? %>
              <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table-striped">
                  <tr><td><center>No Galleries yet</center></td></tr>
            </table>
          <%end%>

          <% @admin_gallery_groups.each do |admin_gallery_group| %>
             <table style="padding:10px" class="floating">
                    <tr>
                          <td width="50px">
                                  <%= link_to 'Edit', edit_admin_gallery_group_path(admin_gallery_group), class:"ico edit"%>
                          </td>
                          <td width="50px">
                                  <%= link_to 'Destroy', admin_gallery_group, method: :delete, data: { confirm: 'Are you sure?' }, :class => "ico del" %>
                          </td>
                    </tr>
                    <tr>
                          <td colspan="2">
                                  <%= link_to image_tag("folder.png", width:"125px", height:"125px"), admin_galleries_path(group_id: admin_gallery_group.id) %>
                          </td>
                    </tr>
                    <tr>
                          <td colspan="2">
                                  <b><center><%= link_to truncate(admin_gallery_group.name, length: 15), admin_galleries_path(group_id: admin_gallery_group.id) %></center></b>
                          </td>
                    </tr>
             </table>
          <!-- <tr>
            <td><%= link_to admin_gallery_group.name, admin_gallery_group %></td>
            <td><%#= truncate(strip_tags(article.body), :length => 30) %></td>
            <td><%=raw admin_gallery_group.sub_name %></td>
            <td><center><%#= counting_comment(article) %></center></td>
            <td  width="5px"><%= link_to 'Edit', edit_admin_gallery_group_path(admin_gallery_group), class:"ico edit" %></td>
            <td  width="5px"><%= link_to 'Destroy', admin_gallery_group, method: :delete, data: { confirm: 'Are you sure?' }, :class => "ico del" %></td>
          </tr> -->
          <%end%>      
        <div class="cl">&nbsp;</div>
        <!-- Pagging -->
        <div class="pagging">
          <%= link_to 'New Galleries', new_admin_gallery_group_path, class:"tab-right-button button journal" %> 
          <div class="left">Galleries Total: <b><%= @admin_gallery_groups.count %></b> Galleries</div>
          <div class="right">
            <%= will_paginate @admin_gallery_groups %>
          </div>
        </div>
        <!-- End Pagging -->
      </div>
      <!-- Table -->
    </div>
    <!-- End Box Article -->
  </div>
  <!-- End Content -->
  
  <div class="cl">&nbsp;</div>      
</div>
<!-- Main -->

<!-- Sidebar -->
<div id="sidebar">
  <%= render :partial => "admin/shared/sidebar" %>
</div>
<!-- Sidebar -->