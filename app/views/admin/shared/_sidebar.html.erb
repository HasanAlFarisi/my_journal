<div class="box">  
  <div class="box-head">
    <h2>Management</h2>
  </div>
  <!-- End Box Head-->

  <div class="box-content">
    <%= link_to "Add new Article", new_admin_article_path, class:"tab-right-button add-button" %>
    <br class="cl"><br>
    <%= link_to "Add new Category", new_admin_category_path, class:"tab-right-button add-button" %>
    <br class="cl"><br>
    <%= link_to "Add new Advertise", new_admin_article_path, class:"tab-right-button add-button" %>
    <br class="cl"><br>
    
    <!-- Sort -->
    <div class="sort">
      <label>Articles Sort by</label>
      <%= form_tag article_search_admin_articles_path do %>
        <%= text_field_tag :title, "",placeholder:"Title", class:"field size6" %>
        <%= text_field_tag :date, "",placeholder:"Date", class:"field size6" %>
        <%= select_tag :category, options_for_select(@categories_select), class:"field size6" %>
        <br>
        <%= submit_tag "Search", class:"button" %>
      <% end %>
    </div>
    <!-- End Sort -->  
  </div>
</div>

<div class="box">
  <div class="box-head">
    <h2>Categories</h2>
  </div>
  <!-- End Box Head-->
  <div class="box-content">
    <ul class="list">
      <% @categories_list.each do |category| %>
        <li>
          <%= link_to "#{category.name}", admin_category_path(category) %>
        </li>
      <%end%>
    </ul>
  </div>
</div>

