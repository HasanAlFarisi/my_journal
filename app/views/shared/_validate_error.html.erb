  <div class="row" id="danger">
          <div class="col-lg-12">
              <div class="alert alert-danger">
                    <a href="javascript:void(0)" class="pull-right close-danger"><b>X</b></a>
                    <ol>
                          <% object.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                          <% end %>
                    </ol>
              </div>
          </div>
  </div>

<script>
      $(document).ready(function() {
            $("#danger").fadeTo(500, 5);
            $("#modal-comment").fadeIn();
            $( '.close-danger' ).click(function( ev ) {  $( '#danger' ).remove();  ev.preventDefault();} );
      })
</script>